" File: vimrc
"
" Author: Philippe Schottey
"
"
" PLUGINS
"
let data_dir = '~/.vim'
if empty(glob(data_dir . '/autoload/plug.vim'))
  silent execute '!curl -fLo '.data_dir.'/autoload/plug.vim --create-dirs  https://raw.githubusercontent.com/junegunn/vim-plug/master/plug.vim'
  autocmd VimEnter * PlugInstall --sync | source $MYVIMRC
endif

call plug#begin('~/.vim/plugged')
Plug 'tpope/vim-commentary'
Plug 'tpope/vim-surround'
Plug 'tpope/vim-fugitive'
Plug 'editorconfig/editorconfig-vim'
Plug 'jiangmiao/auto-pairs'
Plug 'kien/ctrlp.vim'
Plug 'vim-airline/vim-airline'
Plug 'vim-airline/vim-airline-themes'
Plug 'airblade/vim-gitgutter'
Plug 'freitass/todo.txt-vim'
Plug 'neoclide/coc.nvim', {'branch': 'release'}
" snipMate
Plug 'MarcWeber/vim-addon-mw-utils'
Plug 'tomtom/tlib_vim'
Plug 'garbas/vim-snipmate' 
" themes
Plug 'dracula/vim',{'as':'dracula'}
Plug 'joshdick/onedark.vim'
Plug 'morhetz/gruvbox'
call plug#end()

" 
" OPTIONS
"
set nocompatible
set relativenumber
set helpheight=30
set cursorline
set backspace=indent,eol,start
set hlsearch	" highlight all matches
set incsearch	" highlight search results as you type
set noswapfile
set path=.,,**
set listchars=tab:>-
set list
set termguicolors

"
" FILES
"
filetype plugin indent on
syntax enable

"
" FEEL
"
let mapleader=","
nnoremap <Leader>e :Explore<CR>
nnoremap <Backspace> :nohl<CR>
nnoremap <c-b> :CtrlPBuffer<CR>
nnoremap <F3> [<c-I><CR>
" Deactivate the arrows
map <Down> <Nop>
map <Up> <Nop>
map <Left> <Nop>
map <Right> <Nop>
imap <Down> <Nop>
imap <Up> <Nop>
imap <Left> <Nop>
imap <Right> <Nop>
" Mappings to resize panes 
nnoremap <Leader>ss :vertical resize -4<CR>
nnoremap <Leader>ww :vertical resize +4<CR>
nnoremap ; A;<Esc>
" To uppercase
inoremap <c-u> <esc>gUiwea

"   
" NETRW
"
let g:netrw_hide=0
let g:netrw_browsex_viewer="open"
let g:netrw_liststyle=1
let g:netrw_keepdir=1

" 
" LOOKS
" 
colorscheme dracula
let g:airline_theme = 'dracula'
call matchadd('ColorColumn', '\%81v')
hi Normal ctermbg=NONE guibg=NONE

"
" PLUGIN CTRLP
"
let g:ctrlp_map = '<c-p>'
let g:ctrlp_cmd = 'CtrlP'
let g:ctrlp_max_files=20000
let g:ctrlp_custom_ignore='\v[\/]((\.(git|hg|svn))|(target|dist|node_modules|build|bin|vendor)|(.*\~))$'
let g:ctrlp_root_markers = ['ivy.xml', 'build.gradle', 'composer.json', 'package.json', 'build.xml']
let g:ctrlp_show_hidden = 1
let g:ctrlp_working_path_mode = ''

"
" PLUGIN SNIPMATE
"
let g:snipMate = { 'snippet_version' : 1 }
